{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": [
    "src",
    "src/Foodlog/CaloriesFood.tsx",
    "src/Foodlog/foodlog.tsx",
    "src/Bmi/bmi.tsx",
    "src/WorkoutPlans/workoutplans.tsx"
, "useless/menubar.tsx", "ToBeworkedOn/diary.tsx"  ],
  "references": [{ "path": "./tsconfig.node.json" }]
}
